<UserControl x:Class="ParkingCourseProject.Views.PassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkingCourseProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="#808080" Margin="0,0,-48,0">
        <Label Foreground="White" Content="Дата начала:" HorizontalAlignment="Left" Margin="19,-1,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="Дата окончания:" HorizontalAlignment="Left" Margin="19,24,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="Специальный?:" HorizontalAlignment="Left" Margin="217,-1,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="{Binding Start_date}" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="{Binding End_date}" HorizontalAlignment="Left" Margin="112,24,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="{Binding Special_place}" HorizontalAlignment="Left" Margin="306,0,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
